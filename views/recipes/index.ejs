<%- include('../partials/header') %>
<%- include('../partials/nav') %>

<% var pg = (page == 'currRecipes') ? 'Current' : 'Previous' %>

<section style="text-align: center;">
<h1 style="color: white;"><%= pg%> Recipes</h1>

<div class="recipe-container">
    <% u[page].forEach(function(r){ %>
    <div class="card recipe-card-holder">
        <img class="card-img-top" src="<%= r.image%>" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title"><a href="/user/recipes/<%=pg%>/<%= r._id%>"><%= r.title%> </a></h5>
        </div>
        <div class="card-footer">
            <small class="text-muted">Rating</small>
        </div>
    </div>
    <% }) %>
</div>
</section>

<%- include('../partials/footer') %>